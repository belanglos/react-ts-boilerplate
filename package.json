{
    "name": "react-ts-boilerplate",
    "version": "1.0.0",
    "description": "A boilerplate to get new projects up faster.",
    "main": "index.js",
    "dependencies": {
        "@types/react": "^17.0.40",
        "@types/react-dom": "^17.0.13",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.7",
        "@babel/plugin-proposal-class-properties": "^7.16.7",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.4",
        "@types/jest": "^27.4.1",
        "@types/react": "^17.0.40",
        "@types/react-dom": "^17.0.13",
        "@types/testing-library__jest-dom": "^5.14.3",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "eslint": "^8.11.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-html": "^6.2.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.3.0",
        "jest": "^27.5.1",
        "parcel": "^2.3.2",
        "prettier": "^2.6.0",
        "process": "^0.11.10",
        "ts-jest": "^27.1.3",
        "typescript": "^4.6.2"
    },
    "scripts": {
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build": "npm run build:types && npm run build:js",
        "build:prod": "npm run build:types && parcel build ./src/index.html --dist-dir ./dist --public-url $BASENAME",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
        "start": "parcel -p 3000 src/index.html",
        "eslint": "npx eslint \"src/**/*\" --quiet --fix",
        "test": "jest --watch",
        "test:file": "jest --watch --testPathPattern"
    },
    "author": "",
    "license": "GPL-3.0"
}
